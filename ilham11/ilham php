<script>
  // fungsi untuk menjumlahkan nilai berdasarkan class
  function sumByClass(className) {
    const cells = document.querySelectorAll("." + className);
    let total = 0;
    cells.forEach(cell => {
      total += parseInt(cell.textContent);
    });
    return total;
  }

  // isi total per nama
  document.getElementById("totalKhiar").textContent = sumByClass("khiar");
  document.getElementById("totalArdani").textContent = sumByClass("ardani");
  document.getElementById("totalAdhan").textContent = sumByClass("adhan");
</script>

