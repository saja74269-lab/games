<script>
  // ambil semua baris tabel (kecuali header)
  const rows = document.querySelectorAll("#nilaiTable tr");

  rows.forEach((row, index) => {
    if (index > 1) { // skip header
      const it = parseInt(row.querySelector(".it").textContent);
      const eng = parseInt(row.querySelector(".eng").textContent);
      const total = it + eng;
      row.querySelector(".total").textContent = total;
    }
  });
</script>
